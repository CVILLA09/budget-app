<div class="page-container">
  <div class="content-wrap">
    <div class="navigation">
      <ul class="nav-list">
        <li class="nav-item">
          <%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'nav-link' %>
        </li>
        <li class="nav-title"><h2><strong>Categories</strong></h2></li>
        <li class="nav-item">
  <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, form: { class: "sign-out-button", "data-turbo" => "false" }, class: "sign-out-button" %>
</li>
      </ul>
    </div>

    <section class="categories-section">
      <p class="notice"><%= notice %></p>

      <div id="categories">
        <% @categories.each do |category| %>
          <%= link_to category_path(category), class: 'category-link' do %>
            <%= render 'category', category: category %>
          <% end %>
        <% end %>
      </div>
    </section>
  </div>

  <section class="footer-section">
    <%= link_to new_category_path, class: 'add-category-btn' do %>
      <button class="add-category-button"><strong>Add a New Category</strong></button>
    <% end %>
  </section>
</div>
