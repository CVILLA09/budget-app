<div class="navigation-bar">
  <%= link_to image_tag('backarrow.png', alt: 'Back'), root_path, class: 'back-button' %>
  <h2 class="signup-title"><strong>REGISTER</strong></h2>
  <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "sign-out" %>
</div>

<div class="signup-container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.file_field :profile_picture, accept: 'image/png,image/gif,image/jpeg', placeholder: 'Upload Picture', class: "input-field" %>
</div>

  <div class="field">
  <%= f.text_field :name, autofocus: true, placeholder: 'Full name', class: "input-field" %>
</div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: "input-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button-primary" %>
  </div>
<% end %>

</div>